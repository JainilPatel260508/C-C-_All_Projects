#include<stdio.h>
#include<conio.h>

void main()
{
	FILE *fp;
	int no,qty,i;
	float price,value;
	char item[10],filename[10];
	printf("Input File Name:");
	scanf("%s",filename);
	fp=fopen(filename,"w");
	printf("Input Inventory data\n\n");
	printf("Item Name  No  Price  Qty\n");
	for(i=1;i<=3;i++)
	{
		scanf("%s %d %f %d",item,&no,&price,&qty);
//		fscanf(stdin,"%s %d %f %d",item,&no,&price,&qty);
		fprintf(fp,"%s %d %2f %d",item,no,price,qty);
	}
	fclose(fp);
	fprintf(stdout,"\n\n");
	fp=fopen(filename,"r");
	printf("Item name no   price  qty   value\n");
	for(i=1;i<=3;i++)
	{
	      fscanf(fp,"%s %d %f %d",item,&no,&price,&qty);
	      value=price * qty;
	      printf("%-8s %7d %8.2f %8d %11.2f\n",item,no,price,qty,value);
//	      fprintf(stdout,"%-8s %7d %8.2f %8d %11.2f\n",item,no,price,qty,value);
	}
	fclose(fp);
	getch();
}