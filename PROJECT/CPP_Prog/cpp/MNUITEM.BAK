		cout<<"\n\t\t 3. Remove Item";
		cout<<"\n\t\t 4. Display";
		cout<<"\n\t\t 5. Exit";
		cout<<"\n\n\t\t Enter the option:";
		cin>>ch;
		switch(ch)
		{
			case 1:   obj.getdata();
				  break;
			case 2:   obj.dispsum();
				  break;
			case 3:   obj.remove();
				  break;
			case 4:   obj.disp();
				  break;
			case 5:
				  break;
			default:
				 cout<<"\n\n\t\t Wrong choice! Try again....";
				 break;
		}
	  getch();
	}while(ch!=5);
}