#include<iostream.h>
#include<conio.h>

class cel_far
{
	public:
	       float celtofarn(float cel)
		{
		    float farn=0;

			    farn=(cel*1.8) + 32;

		    return(farn);
		}
		float farntocel(float farn)
		{
		    float cel=0;

			    cel=(5*farn-5*32)/9;

		    return(cel);
		}

};

